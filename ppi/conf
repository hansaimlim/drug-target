# For more information on configuration, see:
#   * Official English Documentation: http://nginx.org/en/docs/
#   * Official Russian Documentation: http://nginx.org/ru/docs/

user nginx;
worker_processes 1;
error_log /var/log/nginx/error.log;
pid /run/nginx.pid;

# Load dynamic modules. See /usr/share/doc/nginx/README.dynamic.
include /usr/share/nginx/modules/*.conf;

events {
    worker_connections 1024;
}

http {
    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    sendfile            on;
    tcp_nopush          on;
    tcp_nodelay         on;
    client_body_timeout 12;
    client_header_timeout 12;
    keepalive_timeout   15;
    send_timeout 10;
    types_hash_max_size 4096;

    include             /etc/nginx/mime.types;
    default_type        application/octet-stream;

    # Load modular configuration files from the /etc/nginx/conf.d directory.
    # See http://nginx.org/en/docs/ngx_core_module.html#include
    # for more information.
    include /etc/nginx/conf.d/*.conf;
    include /etc/nginx/sites-enabled/*.conf;

    gzip on;
    gzip_disable "msie6";
    gzip_vary on;
    gzip_proxied any;
    gzip_min_length 1024;
    gzip_comp_level 6;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

    client_body_buffer_size 10K;
    client_header_buffer_size 1k;
    client_max_body_size 8m;
    large_client_header_buffers 4 4k;

    upstream hmipred {
        server unix:/etc/nginx/sock/hmi2_gunicorn.sock fail_timeout=10s;
    }
    #server {
    #    listen    8443 ssl http2;
    #    server_name interactome.ku.edu.tr;
    #    return 301 $scheme://www.interactome.ku.edu.tr$request_uri;
    #}
    server {
        listen       8443 ssl http2 default_server;
        #listen       8443 ssl http2 default_server;
        #server_name  hmipred.com www.hmipred.com;
        server_name  _;
        #server_name  hmipred.com www.hmipred.com;
        ssl_certificate "/etc/pki/tls/certs/interactome_ku_edu_tr.crt";
        ssl_certificate_key "/etc/pki/tls/private/interactome_ku_edu_tr.key";
        ssl_session_cache shared:SSL:1m;
        ssl_session_timeout  10m;
        ssl_ciphers HIGH:!aNULL:!MD5;
        ssl_prefer_server_ciphers on;
        #root /cosbi/web/apps/hmi2_sample;

        #client_max_body_size 4G;
        access_log /cosbi/web/apps/hmi2/logs/nginx-access.log;
        error_log /cosbi/web/apps/hmi2/logs/nginx-error.log warn;

        if ( $host !~* ^(hmipred.org|www.hmipred.org|interactome.ku.edu.tr|www.interactome.ku.edu.tr|88.255.97.135)$ ){
            return 444;
        }
        location /static/ {
            autoindex on;
            root    /cosbi/web/apps/hmi2/hmi_pred;
        }
        location /media/ {
            autoindex on;
            root    /cosbi/web/apps/hmi2/hmi_pred;
        }
        location / {
            proxy_set_header Host $http_host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_pass http://unix:/etc/nginx/sock/hmi2_gunicorn.sock;
        }
        error_page 404 /404.html;
        location = /404.html {
        }
        error_page 500 502 503 504 /500.html;
        location = /500.html {
            root /cosbi/web/apps/hmi2/hmi_pred;
        }
    }
    # Settings for a TLS enabled server.

#    server {
#        listen       443 ssl http2;
#        listen       [::]:443 ssl http2;
#        server_name  _;
#        root         /usr/share/nginx/html;

#        ssl_certificate "/etc/pki/nginx/server.crt";
#        ssl_certificate_key "/etc/pki/nginx/private/server.key";
#        ssl_session_cache shared:SSL:1m;
#        ssl_session_timeout  10m;
#        ssl_ciphers HIGH:!aNULL:!MD5;
#        ssl_prefer_server_ciphers on;

        # Load configuration files for the default server block.
#        include /etc/nginx/default.d/*.conf;

#        error_page 404 /404.html;
#            location = /40x.html {
#        }

#        error_page 500 502 503 504 /50x.html;
#            location = /50x.html {
#        }
#    }

}
    
